\version "2.18.0"

FITSChords = \chordmode{}

FITS = \relative{
  \key d \major
  %% A section
  \repeat volta 2{
    d'8 d d4 fis a
    d d fis2
    e4. fis8 e4 d4
    b1
    a8 a a2 a4
    cis b a2
    a4. b8 a4 g
  }
  \alternative{
    {a4. b8 a4 g
      fis2. e4}
    {a4. b8 a4 b
      fis2. e4}
  }
  \break
  %% B section
  \repeat volta 2{

  }
  \alternative{

  }
}

%{
  \score {
  <<
  \new ChordNames \FITSChords 
  \new Staff { \clef treble \FITS }
  >>
  \header { piece = \markup {\fontsize #4.0 "Footprints in the Snow"}}
  }
%}